    function aud_play_pause(songId) {
        // if (songId) {
        var myAudio = document.getElementById(`myTune${songId}`);
        if (myAudio.paused) {
            $("i .bi-play-circle").removeClass('bi-pause-circle')
            $("i .bi-pause-circle").addClass('bi-play-circle');
            $(`#stateicon${songId}`).removeClass('bi-play-circle');
            $(`#stateicon${songId}`).addClass('bi-pause-circle');
            $("audio").each(function () {
                if (this.id !== `myTune${songId}`) {
                    this.pause()
                    this.currentTime = 0;
                }
            });
            myAudio.play();
        } else {
            $(`#stateicon${songId}`).removeClass('bi-pause-circle');
            $(`#stateicon${songId}`).addClass('bi-play-circle');
            myAudio.pause();
        }
